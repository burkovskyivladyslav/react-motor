{
    "compilerOptions": {
        "lib": ["dom", "es6"],
        "outDir": "./lib",
        "target": "es5",
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "removeComments": true,
        "declaration": true,
        "sourceMap": true,
        "jsx": "react"
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}
